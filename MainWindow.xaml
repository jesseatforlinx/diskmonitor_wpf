<Window x:Class="DiskMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiskMonitor"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        MinHeight="200"
        MinWidth="150"
        Title="MainWindow">
    <Grid Margin="5,0,5,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- 左边自适应 -->
            <ColumnDefinition Width="80"/>
            <!-- 右边固定宽度 -->
        </Grid.ColumnDefinitions>
        <ListBox Name="DriveList" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <Button Content="Add" Margin="10,0,0,10" Height="30" Name="AddButton" Click="AddButton_Click"/>
            <Button Content="Remove" Margin="10,0,0,10" Height="30" Name="RemoveButton" Click="RemoveButton_Click"/>

        </StackPanel>
        <DockPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <ScrollViewer Grid.Row="1" Grid.ColumnSpan="2" VerticalScrollBarVisibility="Auto">
                <StackPanel Name="PanelStack" />
            </ScrollViewer>
        </DockPanel>
        

    </Grid>
</Window>
